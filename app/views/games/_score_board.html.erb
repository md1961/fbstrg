<% if game -%>
  <tr>
    <td class="tight"><%= game.home_has_ball ? '<>' : '' %>
    <td><%= game.home_team.abbr %></td>
    <td class="numeric"><%= game.score_home %></td>
    <td><%= '.' * game.timeout_home %></td>
    <td><%= "#{game.quarter}Q" %></td>
    <td><%= down_and_yard_display(game) %></td>
  </tr>
  <tr>
    <td class="tight"><%= game.home_has_ball ? '' : '<>' %>
    <td><%= game.visitors.abbr %></td>
    <td class="numeric"><%= game.score_visitors %></td>
    <td><%= '.' * game.timeout_visitors %></td>
    <td><%= time_left_display(game.time_left) %></td>
    <td><%= ball_on_display(game) %></td>
  </tr>
<% end -%>
