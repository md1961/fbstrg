<% if game -%>
  <tr>
    <td class="tight"><%= game.home_has_ball ? '' : '<>' %>
    <td><%= game.visitors.abbr %></td>
    <% if game.final? -%>
      <% game.score_visitors_by_quarter.each do |score| -%>
        <td class="numeric score_by_quarter"><%= score %></td>
      <% end -%>
    <% end -%>
    <td class="numeric <%= game.final? ? 'score_final' : '' %>">
      <%= game.score_visitors %>
    </td>
    <td><%= '.' * game.timeout_visitors %></td>
    <td><%= "#{game.quarter}Q" %></td>
    <td><%= down_and_yard_display(game) %></td>
  </tr>
  <tr>
    <td class="tight"><%= game.home_has_ball ? '<>' : '' %>
    <td><%= game.home_team.abbr %></td>
    <% if game.final? -%>
      <% game.score_home_by_quarter.each do |score| -%>
        <td class="numeric score_by_quarter"><%= score %></td>
      <% end -%>
    <% end -%>
    <td class="numeric <%= game.final? ? 'score_final' : '' %>">
      <%= game.score_home %>
    </td>
    <td><%= '.' * game.timeout_home %></td>
    <td class="<%= game.clock_stopped ? '' : 'elapsing' %>">
      <%= time_left_display(game.time_left) %>
    </td>
    <td><%= ball_on_display(game) %></td>
  </tr>
<% end -%>
