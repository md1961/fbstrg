<% gss = play.game_snapshot
   return unless gss
   game = play.game
   is_end_of_game = @game.end_of_game? -%>
<tr>
  <td><%= "##{play.number}" %></td>
  <td><%= "Q#{gss.quarter}" %></td>
  <td><%= time_left_display(gss.time_left) %></td>
  <td><%= gss.offense %></td>
  <td><%= ball_on_display(gss) %></td>
  <td><%= down_and_yard_display(gss) %></td>
  <td><%= play %></td>
  <td><%= "#{game.home_team} #{gss.score_home} - #{game.visitors} #{gss.score_visitors}" %></td>
  <% if is_end_of_game -%>
    <td><span class="toggle_strategy_tool_judgments_display button">[+]</span></td>
  <% end -%>
</tr>
<% if is_end_of_game -%>
  <tr hidden>
    <td>
      <%= render partial: 'strategy_tool_judgments', locals: {game: gss} %>
    </td>
  </td>
<% end -%>
